@inject LayoutService service
@{
    var result = service.GetLayout();
}
@using SweetHome.Models;
@using SweetHome.Services;
@model List<About>
<!-- ABOUT US AREA START -->
<div class="ltn__about-us-area pt-120 pb-90 ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="about-us-img-wrap about-img-left">
                    <img src="~/assets/img/others/@result["AboutImage"]" alt="About Us Image">
                    <div class="about-us-img-info about-us-img-info-2 about-us-img-info-3">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="about-us-info-wrap">
                    <div class="section-title-area ltn__section-title-2--- mb-20">
                        <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">About Us</h6>
                        <h1 class="section-title">
                            @result["AboutDesc"]<span>.</span>
                        </h1>
                        <p>
                            @result["AboutThing"]
                        </p>
                    </div>
                    <ul class="ltn__list-item-half clearfix">
                        @foreach (var item in Model)
                        {
                            <li>
                                @(Html.Raw(item.Icon))
                                @item.Name
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ABOUT US AREA END -->