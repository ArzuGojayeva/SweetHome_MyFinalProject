@using SweetHome.ViewModels;
@model UserVM 
 <!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">My Account</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>My Account</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- WISHLIST AREA START -->
<div class="liton__wishlist-area pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- PRODUCT TAB AREA START -->
                <div class="ltn__product-tab-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="ltn__tab-menu-list mb-50">
                                    <div class="nav">
                                        <a data-bs-toggle="tab" href="#ltn_tab_1_2">Profiles <i class="fas fa-user"></i></a>
                                        <a asp-controller="MyAccount" asp-action="OrderBuyer">Order<i class="fa-solid fa-money-check-dollar"></i> </a>
                                        <a asp-controller="Wishlist" asp-action="Index">Favorited Properties <i class="fa-solid fa-heart"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="tab-content">
                                    <div class="tab-pane fade" id="ltn_tab_1_2">
                                        <div class="ltn__myaccount-tab-content-inner">
                                            <!-- comment-area -->
                                            <div class="ltn__comment-area mb-50">
                                                <div class="ltn-author-introducing clearfix">
                                                    <div class="author-img">
                                                        <img src="~/assets/img/buyer/@Model.Image" alt="Author Image">
                                                    </div>
                                                    <div class="author-info">
                                                        <h6>Agent of Property</h6>
                                                        <h2>@Model.UserName</h2>
                                                        <div class="footer-address">
                                                            <ul>
                                                                <li>
                                                                    <div class="footer-address-icon">
                                                                        <i class="icon-call"></i>
                                                                    </div>
                                                                    <div class="footer-address-info">
                                                                        <p>@Model.Phone</p>
                                                                    </div>
                                                                </li>
                                                                <li>
                                                                    <div class="footer-address-icon">
                                                                        <i class="icon-mail"></i>
                                                                    </div>
                                                                    <div class="footer-address-info">
                                                                        <p>@Model.Email</p>
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- PRODUCT TAB AREA END -->
            </div>
        </div>
    </div>
</div>
<!-- WISHLIST AR