@using SweetHome.Models;
@using SweetHome.ViewModels;
  @model CommentVM
  <!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mb-0" data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Product Details</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Product Details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- IMAGE SLIDER AREA START (img-slider-3) -->
<div class="ltn__img-slider-area mb-90">
    <div class="container-fluid">
        <div class="row ltn__image-slider-5-active slick-arrow-1 slick-arrow-1-inner ltn__no-gutter-all">
            @foreach(var item in Model.Product.ProductImages){
            <div class="col-lg-12">
                <div class="ltn__img-slide-item-4">
                        <img src="~/assets/img/product-3/@(item.Image)" alt="Image">
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- IMAGE SLIDER AREA END -->
<!-- SHOP DETAILS AREA START -->
<div class="ltn__shop-details-area pb-10">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="ltn__shop-details-inner ltn__page-details-inner mb-60">
                    <div class="ltn__blog-meta">
                        <ul>
                            <li class="ltn__blog-category">
                                <a class="bg-orange" href="#">@Model.Product.Category.Name</a>
                            </li>
                        </ul>
                    </div>
                    <h1>@Model.Product.Name</h1>
                    <label><span class="ltn__secondary-color"><i class="flaticon-pin"></i></span>@Model.Product.City.Name</label>
                    <h4 class="title-2">Description</h4>
                    <p>
                        @Model.Product.Description
                    </p>
                    <h4 class="title-2">Property Detail</h4>
                    <div class="property-detail-info-list section-bg-1 clearfix mb-60">
                        <ul>
                            <li><label>Home Area: </label> <span>@Model.Product.HomeSize sqft</span></li>
                            <li><label>Rooms:</label> <span>@Model.Product.Room</span></li>
                            <li><label>HomeType:</label> <span>@Model.Product.HomeType.Name</span></li>
                        </ul>
                        <ul>
                            <li><label>Price:</label> <span>$@Model.Product.Price</span></li>
                            <li><label>Property Status:</label> <span>@Model.Product.Status.Name</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="sidebar ltn__shop-sidebar ltn__right-sidebar---">
                    <!-- Author Widget -->
                    <div class="widget ltn__author-widget">
                        <div class="ltn__author-widget-inner text-center">
                            <img src="~/assets/img/team/@Model.Product.Team.Image" alt="Image">
                            <h5>@Model.Product.Team.Name</h5>
                            <small>@Model.Product.Team.Email</small>
                            <small>@Model.Product.Team.Phone</small>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>
<!-- SHOP DETAILS AREA END -->
<!-- comment-area -->
<h2>Comments Area</h2>
<div class="ltn__comment-area mb-30">
    <div class="ltn__comment-inner">
        <ul>
            @foreach(var item in Model.Comments){
            <li>
                <div class="ltn__comment-item clearfix">
                    <div class="ltn__commenter-comment">
                        <h6><a href="#">@item.ApplicationUser.UserName</a></h6>
                        <p>@item.Description</p>
                        <span class="ltn__comment-reply-btn">@item.Date</span>
                    </div>
                </div>
            </li>
            }
        </ul>
    </div>
</div>
@await Component.InvokeAsync("Comment",new {id=Model.Product.Id})