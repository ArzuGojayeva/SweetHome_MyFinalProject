@using SweetHome.ViewModels.Account;
 @model RegisterVM
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Register <br>Senin Accountun</h1>
                    <p>
                        Indi qeydiyyatdan kec
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form asp-action="Register" method="post" class="ltn__form-box contact-form-box" enctype="multipart/form-data">
                        <input asp-for="Name">
                        <input asp-for="Email">
                        <input asp-for="ImageFile">
                        <input asp-for="Phone">
                        <input asp-for="Password">
                        <input asp-for="ConfirmPassword">
                        <label class="checkbox-inline">
                            <input asp-for="IsAgent">
                           Is Agent?
                        </label>
                        <div class="btn-wrapper">
                            <button  class="theme-btn-1 btn reverse-color btn-block" type="submit">CREATE ACCOUNT</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <p>By creating an account, you agree to our:</p>
                        <p><a href="#">TERMS OF CONDITIONS  &nbsp; &nbsp; | &nbsp; &nbsp;  PRIVACY POLICY</a></p>
                        <div class="go-to-btn mt-50">
                            <a asp-action="Login">ALREADY HAVE AN ACCOUNT ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->