@using SweetHome.Models;
@using SweetHome.ViewModels;
 @model SellerVM
  <!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">My Account</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>My Account</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- WISHLIST AREA START -->
<div class="liton__wishlist-area pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- PRODUCT TAB AREA START -->
                <div class="ltn__product-tab-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="ltn__tab-menu-list mb-50 border-color-3">
                                    <div class="nav">
                                        <a data-bs-toggle="tab" href="#ltn_tab_1_2">Profiles <i class="fas fa-user"></i></a>
                                        <a data-bs-toggle="tab" href="#ltn_tab_1_5">My Properties <i class="fa-solid fa-list"></i></a>
                                        <a asp-controller="MyAccount" asp-action="Create">Add Property <i class="fa-solid fa-map-location-dot"></i></a>
                                        <a asp-controller="Account" asp-action="LogOut">Logout <i class="fas fa-sign-out-alt"></i></a>
                                        <a asp-controller="MyAccount" asp-action="OrderSeller">Order <i class="fa-solid fa-money-check-dollar"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="tab-content">
                                    <div class="tab-pane fade active" id="ltn_tab_1_2">
                                        <div class="ltn__myaccount-tab-content-inner">
                                            <!-- comment-area -->
                                            <div class="ltn__comment-area mb-50">
                                                <div class="ltn-author-introducing clearfix">
                                                    <div class="author-img">
                                                        <img src="~/assets/img/team/@Model.Team.Image" alt="Author Image">
                                                    </div>
                                                    <div class="author-info">
                                                        <h2>@Model.Team.Name</h2>
                                                        <div class="footer-address">
                                                            <ul>
                                                                <li>
                                                                    <div class="footer-address-icon">
                                                                        <i class="icon-call"></i>
                                                                    </div>
                                                                    <div class="footer-address-info">
                                                                        <p>@Model.Team.Phone</p>
                                                                    </div>
                                                                </li>
                                                                <li>
                                                                    <div class="footer-address-icon">
                                                                        <i class="icon-mail"></i>
                                                                    </div>
                                                                    <div class="footer-address-info">
                                                                        <p>@Model.Team.Email</p>
                                                                    </div>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="ltn_tab_1_5">
                                        <div class="ltn__myaccount-tab-content-inner">
                                            <div class="ltn__my-properties-table table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">My Properties</th>
                                                            <th scope="col"></th>
                                                            <th scope="col">Category</th>
                                                            <th scope="col">Settings</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach(var item in Model.Team.Products){
                                                        <tr>
                                                            <td class="ltn__my-properties-img">
                                                                    <a href="product-details.html"><img src="~/assets/img/product-3/@(item.ProductImages.Where(x=>x.IsMain == true).FirstOrDefault()?.Image)" alt="#"></a>
                                                            </td>
                                                            <td>
                                                                <div class="ltn__my-properties-info">
                                                                    <h6 class="mb-10"><a href="product-details.html">@item.Name</a></h6>
                                                                    <small><i class="icon-placeholder"></i>@item.City.Name</small>
                                                                </div>
                                                            </td>
                                                            <td>@item.Category.Name</td>
                                                                <td>
                                                                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                                                                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Edit</button></a>
                                                                </td>
                                                        </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade " id="ltn_tab_1_7">
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- PRODUCT TAB AREA END -->
            </div>
        </div>
    </div>
</div>
<!-- WISHLIST AREA START -->
