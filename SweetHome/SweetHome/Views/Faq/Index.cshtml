@inject LayoutService service
@{
    var result = service.GetLayout();
}
@using SweetHome.Models;
@using SweetHome.Services;
@model List<Faq>
   <!-- 
    BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Frequently asked questions</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>FAQ</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- FAQ AREA START (faq-2) (ID > accordion_2) -->
<div class="ltn__faq-area mb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="ltn__faq-inner ltn__faq-inner-2">
                    <div id="accordion_2">
                        <!-- card -->
                        @foreach(var item in Model){
                        <div class="card">
                            <h6 class="collapsed ltn__card-title" data-bs-toggle="collapse" data-bs-target="#faq-item-2-1" aria-expanded="false">
                                @item.Title
                            </h6>
                            <div id="faq-item-2-1" class="collapse" data-bs-parent="#accordion_2">
                                <div class="card-body">
                                    <p>@item.Description.</p>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                    <div class="need-support text-center mt-100">
                        <h2>@result["Faq"]</h2>
                        <div class="btn-wrapper mb-30">
                            <a asp-controller="ContactUs" asp-action="Index" class="theme-btn-1 btn">Contact Us</a>
                        </div>
                        <h3>@(Html.Raw(result["PhoneIcon"])) @result["Phone"]</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="sidebar-area ltn__right-sidebar">
                    <!-- Newsletter Widget -->
                    @await Component.InvokeAsync("Search")
                </aside>
            </div>
        </div>
    </div>
</div>
<!-- FAQ AREA START -->